        /* ========================================
           SERVICES PAGE - SPECIFIC STYLES
           ======================================== */

        /* Hero Section - Split Design */
        .services-hero {
            background: linear-gradient(135deg, var(--primary-dark) 0%, #1a2d47 100%);
            padding: 8rem 2rem 6rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .services-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(201, 162, 39, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(201, 162, 39, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }

        .services-hero-content {
            max-width: 900px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .services-hero h1 {
            font-size: 4.5rem;
            color: white;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .services-hero p {
            font-size: 1.3rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 0;
            max-width: 650px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Split Cards Section */
        .split-services {
            max-width: 1400px;
            margin: -4rem auto 6rem;
            padding: 0 2rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            position: relative;
            z-index: 10;
        }

        .service-path {
            background: white;
            border-radius: 24px;
            padding: 3.5rem;
            box-shadow: 0 20px 60px rgba(14, 27, 46, 0.12);
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
        }

        .service-path:hover {
            transform: translateY(-8px);
            box-shadow: 0 30px 80px rgba(14, 27, 46, 0.18);
            border-color: var(--accent);
        }

        .service-path::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: var(--accent);
            opacity: 0.05;
            border-radius: 50%;
            transform: translate(40%, -40%);
            transition: all 0.6s ease;
        }

        .service-path:hover::before {
            transform: translate(30%, -30%) scale(1.3);
            opacity: 0.08;
        }

        .service-path-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--accent) 0%, #d4ae3a 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            transform: rotate(-5deg);
            transition: transform 0.4s ease;
        }

        .service-path:hover .service-path-icon {
            transform: rotate(0deg) scale(1.05);
        }

        .service-path-icon svg {
            width: 42px;
            height: 42px;
            color: white;
            stroke-width: 2.5;
        }

        .service-path h2 {
            font-size: 2.8rem;
            color: var(--primary-dark);
            margin-bottom: 1rem;
            letter-spacing: 0.02em;
        }

        .service-path-subtitle {
            font-size: 1.15rem;
            color: rgba(10, 14, 39, 0.7);
            margin-bottom: 2.5rem;
            line-height: 1.7;
        }

        .service-path-cta {
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            background: var(--accent);
            color: white;
            padding: 1.1rem 2.5rem;
            border-radius: 14px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            box-shadow: 0 8px 24px rgba(201, 162, 39, 0.3);
        }

        .service-path-cta:hover {
            transform: translateX(5px);
            box-shadow: 0 12px 32px rgba(201, 162, 39, 0.4);
            background: #d4ae3a;
        }

        /* Products Grid */
        .products-section {
            max-width: 1400px;
            margin: 0 auto 8rem;
            padding: 0 2rem;
        }

        .products-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .products-header h2 {
            font-size: 3.5rem;
            color: var(--primary-dark);
            margin-bottom: 1rem;
        }

        .products-header p {
            font-size: 1.2rem;
            color: rgba(10, 14, 39, 0.7);
            max-width: 700px;
            margin: 0 auto;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2.5rem;
        }

        .product-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 12px 40px rgba(14, 27, 46, 0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            position: relative;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(14, 27, 46, 0.15);
            border-color: var(--accent);
        }

        .product-image {
            width: 100%;
            height: 280px;
            background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .product-image::after {
            content: 'E-BOOK';
            font-family: 'Bebas Neue', sans-serif;
            font-size: 3rem;
            color: rgba(14, 27, 46, 0.08);
            letter-spacing: 0.1em;
            position: absolute;
            transform: rotate(-15deg);
        }

        .product-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: var(--accent);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.85rem;
            letter-spacing: 0.05em;
            text-transform: uppercase;
        }

        .product-content {
            padding: 2rem;
        }

        .product-title {
            font-size: 1.8rem;
            color: var(--primary-dark);
            margin-bottom: 0.8rem;
            line-height: 1.3;
        }

        .product-description {
            font-size: 1rem;
            color: rgba(10, 14, 39, 0.7);
            line-height: 1.7;
            margin-bottom: 1.5rem;
        }

        .product-price {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--accent);
            margin-bottom: 1.5rem;
        }

        .product-cta {
            display: block;
            text-align: center;
            background: var(--primary-dark);
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.3s ease;
        }

        .product-cta:hover {
            background: #1a2d47;
            transform: scale(1.02);
        }

        /* Consultation CTA Section */
        .consultation-cta {
            max-width: 1200px;
            margin: 0 auto 8rem;
            padding: 0 2rem;
        }

        .consultation-banner {
            background: linear-gradient(135deg, var(--primary-dark) 0%, #1a2d47 100%);
            border-radius: 28px;
            padding: 4rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .consultation-banner::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(201, 162, 39, 0.15) 0%, transparent 70%);
            transform: translate(-50%, -50%);
        }

        .consultation-banner-content {
            position: relative;
            z-index: 2;
        }

        .consultation-banner h2 {
            font-size: 3.5rem;
            color: white;
            margin-bottom: 1.5rem;
        }

        .consultation-banner p {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 2.5rem;
            max-width: 650px;
            margin-left: auto;
            margin-right: auto;
        }

        .consultation-banner-cta {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            background: var(--accent);
            color: white;
            padding: 1.3rem 3rem;
            border-radius: 16px;
            text-decoration: none;
            font-weight: 800;
            font-size: 1.15rem;
            transition: all 0.3s ease;
            box-shadow: 0 12px 40px rgba(201, 162, 39, 0.4);
        }

        .consultation-banner-cta:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 50px rgba(201, 162, 39, 0.5);
            background: #d4ae3a;
        }

        /* Mobile Responsiveness */
        @media (max-width: 1024px) {
            .products-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .services-hero {
                padding: 6rem 1.5rem 4rem;
            }

            .services-hero h1 {
                font-size: 3rem;
            }

            .services-hero p {
                font-size: 1.1rem;
            }

            .split-services {
                grid-template-columns: 1fr;
                gap: 2rem;
                margin-top: -3rem;
            }

            .service-path {
                padding: 2.5rem;
            }

            .service-path h2 {
                font-size: 2.2rem;
            }

            .products-header h2 {
                font-size: 2.5rem;
            }

            .consultation-banner {
                padding: 3rem 2rem;
            }

            .consultation-banner h2 {
                font-size: 2.5rem;
            }
        }

        /* Scroll Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-in {
            animation: fadeInUp 0.8s ease-out forwards;
        }
    </style>
</head>
